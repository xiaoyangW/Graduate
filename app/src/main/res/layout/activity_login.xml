<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorName"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:background="@color/colorAccent"
        android:id="@+id/login_toolbbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/textcolor"
        android:text="苏宁红孩子账号登录："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <LinearLayout
        android:background="@color/backcolor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_login_account"/>
        <View
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorName"
            android:layout_width="1dp"
            android:layout_height="30dp"/>

        <EditText
            android:textSize="15dp"
            android:maxLines="1"
            android:background="@null"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/et_username"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:hint="邮箱/手机号/昵称/门店会员号"/>
    </LinearLayout>

    <!---->

    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@color/backcolor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_login_password"/>
        <View
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorName"
            android:layout_width="1dp"
            android:layout_height="30dp"/>

         <android.support.design.widget.TextInputEditText
            android:inputType="textPassword"
            android:background="@null"
            android:textSize="15dp"
             android:maxLength="15"
             android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/et_password"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:hint="请输入您的易购密码"/>

    </LinearLayout>

    <Button
        android:textColor="@color/backcolor"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btnshape"
        android:layout_marginTop="20dp"
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="快速注册"
            android:textColor="@color/colorNameCheck"
            android:layout_width="0dp"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/colorNameCheck"
            android:text="忘记密码"
            android:textSize="15dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>